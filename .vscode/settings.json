{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.insertFinalNewline": true,

	"files.exclude": {
		"*.log*": true,
		"coverage": true,
		"node_modules": true
	},

	"search.exclude": {
		"dist": true,
		"dist-cjs": true,
		"libwebp/dist": true
	},

	"typescript.tsdk": "node_modules/typescript/lib/",

	"[dockerfile]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},

	"[plaintext]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	}
}
